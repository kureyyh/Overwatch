@model Client

<form method="post"> 
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Maak een nieuwe Client aan</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/> 
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Maak</button>
        <a asp-controller="Client" asp-action="Index" class="btn btn-secondary" style="width:150px">Terug</a>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
