@model IEnumerable<Client>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Klanten</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Client" asp-action="Create" class="btn btn-primary">
                Maak een nieuwe client
            </a>
        </div>
    </div>
</div>
<br /> <br />

<h1>Clients </h1>
<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.Description
                </td>
            </tr>

        }
    </tbody>

</table>
